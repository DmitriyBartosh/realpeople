<!DOCTYPE html>
html(lang="ru")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Маникюр | Реальные Люди
        link(rel="stylesheet", href="../css/style.min.css")
        link(rel="shortcut icon", href="../img/logo/icon32.png", type="image/x-icon")
        link(rel="shortcut icon", href="../img/logo/icon256.png")
    body
      main
        include ../../layout/beauty/story/manicure.pug
        include ../../layout/beauty/price/manicure.pug

        .serviceHeader.promoManicure
          .serviceHeader__info
            h2 Маникюр
            p Выберите специалиста

        .listMasters
          .master
            .master__block
              .story
              a(href="#").master__avatar.storyOpen
                picture
                  source(srcset="../webp/beauty/freelance/manicure/avatar/1.webp", type="image/webp")
                  source(srcset="../img/beauty/freelance/manicure/avatar/1.jpg", type="image/jpeg")
                  img(src="../img/beauty/freelance/manicure/avatar/1.jpg", alt="")
              .master__info
                h3 Катя Фролова
                p ул. Урванцева, 16
              .master__link
                a.master__link__openNavButton
                  img(src="../img/icon/add.svg", alt="")

            .master__nav
              a(href="#").master__nav__button.long.price
                img(src="../img/icon/ruble.svg", alt="")
                p Цены
              a.master__nav__button.small
              a(href="https://www.instagram.com/nail_by_frolovaa/" target="_blank").master__nav__button.wide
                img(src="../img/icon/instagram.svg", alt="")
                p Instagram
              a(href="tel:+79832794026" target="_blank").master__nav__button.small
                img(src="../img/icon/phone.svg", alt="")
              a(href="https://yandex.ru/maps/-/CCUQYKaapA" target="_blank").master__nav__button.wide
                img(src="../img/icon/place.svg", alt="")
                p Карта
              a.master__nav__button.wide

      nav.serviceNav
        .serviceNav__back
          a(href="/realpeople/app/beauty.html")
            img(src="../img/icon/backspace.svg", alt="")
        .serviceNav__category 
          a(href="/realpeople/app/beauty.html") 
            p Категория | Красота
        .serviceNav__home
          a(href="/realpeople/app/")
            p REAL
      
      script(src="../js/bundle.js")
      script(src="../js/webp.js")